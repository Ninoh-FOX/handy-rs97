#!/bin/sh

mkdir -p opk
cp ./handy opk/handy
cp ./handy.png opk/handy.png
cp ./docs/license opk/COPYING

# https://unix.stackexchange.com/questions/219268/how-to-add-new-lines-when-using-echo
print()
	case    ${IFS- } in
	(\ *)   printf  %b\\n "$*";;
	(*)     IFS=\ $IFS
	printf  %b\\n "$*"
	IFS=${IFS#?}
esac

# Create GmenuNx entry file plus other things

print '[Desktop Entry]
Type=Application
Name=Handy
Comment=Atari Lynx emulator
Exec=handy %f
Icon=handy.png
Terminal=false
Type=Application
Categories=emulators;
X-OD-NeedsDownscaling=false' > opk/default.gcw0.desktop

mksquashfs ./opk handy_gcw0.opk -all-root -noappend -no-exports -no-xattrs

rm -r opk
